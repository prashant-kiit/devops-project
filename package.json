{
  "name": "sample-project",
  "version": "1.0.0",
  "description": "project for learning devops",
  "repository": {
    "type": "git",
    "url": "devops-project"
  },
  "license": "ISC",
  "author": "prashant-kiit",
  "type": "commonjs",
  "main": "index.js",
  "workspaces": [
    "app/*"
  ],
  "scripts": {
    "clean": "rm -r dist",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces && npm run generate --workspace=backend",
    "start:database:prod": "npm run migrate --workspace=backend",
    "start:backend:prod": "npm run start:prod --workspace=backend",
    "start:frontend:prod": "npm run start:prod --workspace=frontend",
    "stop:backend:prod": "npm run stop --workspace=backend"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  }
}
