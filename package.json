{
  "name": "sample-project",
  "version": "1.0.0",
  "description": "project for learning devops",
  "repository": {
    "type": "git",
    "url": "devops-project"
  },
  "license": "ISC",
  "author": "prashant-kiit",
  "type": "commonjs",
  "main": "index.js",
  "workspaces": [
    "app/*"
  ],
  "scripts": {
    "clean": "rm -r dist",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces",
    "start": "concurrently -n BACKEND,FRONTEND -c green,blue \"npm:start:backend\" \"npm:start:frontend\"",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run start --workspace=frontend"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "dependencies": {
    "concurrently": "^9.1.2"
  }
}
